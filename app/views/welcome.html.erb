<html>
<head>
  <title>G O L</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.2/angular.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.0rc1/angular-route.min.js"></script>
</head>
<body>
  <header>
    <h1 id="title">G O L</h1>
    <h2 id="byline">Track Your Goals | Dream Bigger</h2>
  </header>

  <h4 class="welcome">Sign up to get started!</h4>

  <form class="form" action="<%= users_path %>" method="POST"
      autocomplete="false">
    <input type="hidden" name="authenticity_token"
      value="<%= form_authenticity_token %>">

    <input type="email" name="user[email]"
      placeholder="your email address">
    <input type="password" name="user[password]"
      placeholder="your password"><br/>
      <br>
       <button type="submit" class="btn btn-default">Sign up</button>
    <!-- <input type="submit" value="Sign up"> -->
  </form>

  <h4 class="welcome">Sign in if you have an account</h4>

  <form class="form" action="<%= session_path %>" method="POST">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="email" name="user[email]" placeholder="your email">
    <input type="password" name="user[password]" placeholder="your password">
    <br>
    <!-- <input type="submit" value="Sign in!"> -->
    <br>
     <button type="submit" class="btn btn-default">Sign in</button>
  </form>

<%= yield %>

</body>
</html>
